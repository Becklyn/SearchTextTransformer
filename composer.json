{
    "name":         "becklyn/search-text-transformer",
    "description":  "A library that extracts plain text from HTML for usage in search engines (like Elasticsearch)",
    "keywords":     ["becklyn"],
    "license":      "BSD-3-Clause",
    "type":         "library",
    "homepage":     "https://github.com/Becklyn/SearchTextTransformer",
    "authors": [
        {
            "name":     "Becklyn Studios",
            "homepage": "http://becklyn.com/"
        }
    ],
    "require": {
        "php": "^7.0.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0",
        "symfony/finder": "^2.8 | ^3.0",
        "symfony/filesystem": "^2.8 | ^3.0",
        "symfony/phpunit-bridge": "^3.4|^4.0"
    },
    "autoload": {
        "psr-4": { "Becklyn\\SearchText\\": "" }
    },
    "autoload-dev": {
        "psr-4": { "Tests\\Becklyn\\SearchText\\": "Tests/" }
    }
